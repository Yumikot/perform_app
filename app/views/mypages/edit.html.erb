<h1>プロフィール詳細</h1>

<%= form_with model: @user, local: true do |form| %>
<div>

    <%= form.label :role, "職業" %>
    <%= form.text_field :role %>
  </div>
  <div>
    <%= form.label :description, "自己紹介" %>
    <%= form.text_area :description, size: "40x10" %>
  </div>
  <div>
    <%= form.submit "設定する" %>
  </div>

  <% end %>