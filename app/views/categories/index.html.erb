<h1>登録カテゴリー一覧</h1>
<div>
  <% @categories.each do |category| %>
    <p><%= category.id %>|<%= category.name %></p>
      <%= link_to "編集", edit_category_path(category) %>
      <%= link_to "削除", category_path(category), method: :delete, data: {confirm: '本当に削除しますか？'} %>
      <hr>
    <% end %>
 
</div>


