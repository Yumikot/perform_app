<div class="text-center">
  <div class="jumbotron">
    <h2><%= @user.username %></h2>
      <img src="<%= @user.profile_image %>" class= "profile_image" >
    <h3>プロフィール</h3>
    <% if @user==current_user %>
    <p>id:<%= @user.id %></p>
    <button type="button" class="btn btn-warning"><%= link_to "プロフィール詳細設定", edit_mypages_path(@user) %></button>
    <% end %>
    <div class="user_profile">
      <p>職業:<%= @user.role %></p>
      <p>自己紹介:<%= @user.description %></p>
      <p>SNS/HP:<%= raw Rinku.auto_link(h(@user.user_url), :all,'target="_blank"') %></p> 
    </div>  
  </div> 
</div>


  


