<h1>投稿一覧</h1>

<% @posts.each do |post| %> 
  <div class="card">
    <div class="card-body">
      <button type="button" class="btn btn-primary"><%= post.category.name if post.category %></button>
      <h3>Title:<%= post.title %></h3>
      <div class="post_image">
        <%= image_tag(post.image_url, width:200) if post.image?%>
      </div>
      <p class="post_content">Content:<%= post.content %></p>
      <p>投稿者:<%= post.user.username%></p>
      <button type="button" class="btn btn-warning"><%= link_to "詳細", post_path(post.id) %></button>

      <% if user_signed_in? && current_user.id == post.user_id %>
      <button type="button" class="btn btn-dark"><%= link_to "削除", post, method: :delete, data: {confirm: "削除しますか？"} %></button>
      <button type="button" class="btn btn-secondary"><%= link_to "編集", edit_post_path(post) %></button>
      <% end %>
    </div>
  </div>
<% end %>


  