<h1>投稿詳細</h1>
  <button class="btn"><%=@post.category.name if @post.category %></button>
<h3><%= @post.title %></h3>

<p>内容 <%= @post.content %></p>
<%= link_to(@post.user.username,"/users/#{@user.id}")%>
<p>
  <%= image_tag(@post.image_url, width:200) if @post.image?%>
</p>
#いいね!ボタン
<% if current_user.already_liked?(@post) %>
 <%=button_to 'いいねを消す',post_like_path(@post), method: :delete %>
<% else %> 
 <%= button_to 'いいね', post_likes_path(@post)%>
<% end %>
<% if user_signed_in? && current_user.id == @post.user_id %>
  <%= link_to "削除", @post, method: :delete, data:{confirm: "削除しますか？"} %>
  <%= link_to "編集", edit_post_path(@post) %>
<% end %>

